    <emailTemplate>VisitOps__VisitForce_Standard_Notifications/VisitOps__Visit_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>VisitOps__Visit__c.VisitOps__SubmitVisitFor__c</field>
            <operation>equals</operation>
