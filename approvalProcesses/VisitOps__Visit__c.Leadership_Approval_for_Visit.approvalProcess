        </criteriaItems>
        <criteriaItems>
            <field>VisitOps__Visit__c.VisitOps__VisitTypeCategoryFormula__c</field>
            <operation>equals</operation>
            <value>CV1</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>VisitOps__Leadership_Approved_Notification_for_Visit_Users</name>
            <type>Alert</type>
        </action>
        <action>
            <name>VisitOps__LeadershipApprovalApproved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>VisitOps__ResetSubmitVisitFor</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>VisitOps__Leadership_Declined_Notification_for_Visit_Users</name>
            <type>Alert</type>
        </action>
        <action>
            <name>VisitOps__LeadershipApprovalRejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
