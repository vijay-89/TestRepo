<aura:component description="CDHPNavigateToISG" 
                implements="force:lightningQuickAction,flexipage:availableForRecordHome,force:hasRecordId"
                controller="CreateCDHPQuestionnaire" access="global">
    
    <aura:attribute name="record" type="Object"
                    description="The record object to be displayed"/>
    <aura:attribute name="QuoteRecord" type="Object"
                    description="To access Quote Record fields"/>
    <aura:attribute name="recordError" type="String"
                    description="An error message bound to force:recordData"/>
	<aura:handler name="init" action="{!c.doInit}" value="{!this}"/>
    <!-- Attribute to to conditionally show/hide "Create/Update Act Wise Questionnaire" link -->
    <aura:attribute name="showTheCreatUpdateLink" type="Boolean" default="false"/>
    <!-- Attributes to to conditionally show/hide "View Act Wise Questionnaire" link -->
    <aura:attribute name="showTheViewLink" type="Boolean" default="false"/>
	<aura:attribute name="CDHP_SF_Id_From_ISG" type="String"/>
    <aura:attribute name="showWarning" type="Boolean" default="false"/>
    <aura:attribute name="showWarningModal" type="Boolean" default="false"/>
    
    <!--Attribute to show loader while performing actions(Create, Update, View)-->
    <aura:attribute name="showSpinner" type="Boolean" default="false"/>
    <aura:if isTrue="{!v.showSpinner}">
        <lightning:spinner variant="brand" size="medium" style="position:fixed"/>
    </aura:if>
    <!-- Attributes to send opp data dynamically--> 
    <aura:attribute name="forCreate" type="String" default="Create"/>
    <aura:attribute name="forUpdate" type="String" default="Update"/>

    <aura:attribute name="fromBtn" type="String"/>
	<!-- Commented LDS code as created Apex Controller for PRDCRM-38037
    <force:recordData aura:id="record"
                      layoutType="FULL"
                      recordId="{!v.recordId}"
                      targetError="{!v.recordError}"
                      targetRecord="{!v.record}"
                      targetFields="{!v.QuoteRecord }"
                      fields="CDHP_SF_Id_From_ISG__c"
                      mode="VIEW"/>
 -->
    
    <aura:if isTrue="{!v.showWarningModal}">
        
        <!-- Modal/Popup Box starts here-->
        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
            <div class="slds-modal__container">
                <!-- Modal/Popup Box Header Starts here-->
                <header class="slds-modal__header">
                    <lightning:buttonIcon iconName="utility:close"
                                          onclick="{! c.closeModel }"
                                          alternativeText="close"
                                          variant="bare-inverse"
                                          class="slds-modal__close"/>
                    <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Warning</h2>
                </header>
                <!--Modal/Popup Box Body Starts here-->
                <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                    <p>An implementation case has been created for this quote.Any changes made to Act Wise product configuration will require a Change request to ensure that product gets configured successfully.</p>
                </div>
                <!--Modal/Popup Box Footer Starts here-->
                <footer class="slds-modal__footer">
                    <lightning:button variant="neutral"
                                      label="Cancel"
                                      title="Cancel"
                                      onclick="{! c.closeModel }"/>
                    <lightning:button variant="brand"
                                      label="OK"
                                      title="OK"
                                      onclick="{!c.submitDetails}"/>
                </footer>
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </aura:if>
    
    <!-- Display a lightning card with details about the record -->
    <div class="slds-grid slds-gutters ">
        <aura:if isTrue="{!v.showTheViewLink}">    
            <div class="slds-col slds-size_1-of-2">
                <lightning:card variant="Narrow" iconName="standard:scan_card">
                    <aura:set attribute="title">
                        <a onclick="{!c.view}">View Act Wise Questionnaire</a>
                    </aura:set>          
                </lightning:card>
            </div>
        </aura:if>
        <!-- US-38037 adding new link to Create CDHP Questionnaire record-->
        <!-- PRDCRM-41416 we have added if condition to display Create and Update button dynamically-->
        <aura:if isTrue="{!and(v.showTheCreatUpdateLink,v.showTheViewLink)}">
            <div class="slds-col slds-size_1-of-2">
                <lightning:card variant="Narrow" iconName="standard:scan_card">
                    <aura:set attribute="title">
                        <a onclick="{!c.sendAndViewData}">Update Act Wise Questionnaire</a> 
                        <!-- <lightning:button variant="base" label="Create/Update Act Wise Questionnaire" title="Create/Update Act Wise Questionnaire" onclick="{!c.sendOpportunity}"/> -->
                    </aura:set>    
                </lightning:card>            
            </div>
            <aura:set attribute="else">
                <aura:if isTrue="{!v.showTheCreatUpdateLink}">
                    <div class="slds-col slds-size_1-of-2">
                        <lightning:card variant="Narrow" iconName="standard:scan_card">
                            <aura:set attribute="title">
                                <a onclick="{!c.sendOpportunity}">Create Act Wise Questionnaire</a> 
                                <!-- <lightning:button variant="base" label="Create/Update Act Wise Questionnaire" title="Create/Update Act Wise Questionnaire" onclick="{!c.sendOpportunity}"/> -->
                            </aura:set>    
                        </lightning:card>            
                    </div>
                </aura:if>
            </aura:set>
        </aura:if>
    </div>        
    <!-- Display Lightning Data Service(LDS) errors, if any, PRDCRM-38037-->
    <aura:if isTrue="{!not(empty(v.recordError))}">
        <div class="recordError">
                {!v.recordError}</div>
    </aura:if>
</aura:component>