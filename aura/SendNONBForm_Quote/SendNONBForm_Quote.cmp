<aura:component description="SendNONBForm_Quote" 
                implements="force:lightningQuickAction,flexipage:availableForRecordHome,force:hasRecordId"
                controller="ShowNONBSendButton" access="global">
    
    <aura:attribute name="record" type="Object"
                    description="The record object to be displayed"/>
    <aura:attribute name="QuoteRecord" type="Object"
                    description="To access Quote Record fields"/>
    <aura:attribute name="recordError" type="String"
                    description="An error message bound to force:recordData"/>
    <aura:handler name="init" action="{!c.doInit}" value="{!this}"/>
    <aura:attribute name="showWarning" type="Boolean" default="false"/>
    <aura:attribute name="showWarningModal" type="Boolean" default="false"/>
    <aura:attribute name="showWarningResendModal" type="Boolean" default="false"/>
    <aura:attribute name="showResendWarning" type="Boolean" default="false"/>
    
    <aura:attribute name="showBtn" type="Boolean" default="false"/>
    
    <!-- Attributes to to conditionally show/hide "Send Act Wise Notice of New Business" link -->
    <aura:attribute name="showSendEmailLink" type="Boolean" default="false"/>
    <!-- Attributes to to conditionally show/hide "Resend Act Wise Notice of New Business" link -->
    <aura:attribute name="showResendEmailLink" type="Boolean" default="false"/> 
    <!--Attribute to show loader while performing actions(Create, Update, View)-->
    <aura:attribute name="showSpinner" type="Boolean" default="false"/>
    <aura:if isTrue="{!v.showSpinner}">
        <lightning:spinner variant="brand" size="medium" style="position:fixed"/>
    </aura:if>
    
    <table>
        <tbody>
            <tr>
                <td colspan="2">
                    <aura:if isTrue="{!v.showSendEmailLink}"> 
                        <lightning:card variant="Narrow" iconName="standard:scan_card">
                            <aura:set attribute="title">
                                <a onclick="{!c.sendMail}">Send Act Wise Notice of New Business</a>
                            </aura:set>     
                        </lightning:card>                          
                        <!-- Resend email link starts here -->				
                        <aura:set attribute="else">
                            <aura:if isTrue="{!v.showResendEmailLink}">                    
                                <lightning:card variant="Narrow" iconName="standard:scan_card">
                                    <aura:set attribute="title">
                                        <a onclick="{!c.resendMail}">Resend Act Wise Notice of New Business</a>                                 
                                    </aura:set>    
                                </lightning:card>           
                            </aura:if>
                        </aura:set>              
                        <!-- Resend email link ends here  -->              
                    </aura:if>                     
                </td>
            </tr>
        </tbody>
    </table>
    <!-- Display Lightning Data Service(LDS) errors, if any, PRDCRM-38037-->
    <aura:if isTrue="{!not(empty(v.recordError))}">
        <div class="recordError">
            {!v.recordError}</div>
    </aura:if>
</aura:component>