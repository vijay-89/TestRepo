<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>These users should not be able to toggle from Salesforce Lightning experience to Salesforce Classic. Lightning is their default view.</description>
    <hasActivationRequired>false</hasActivationRequired>
    <label>Restrict Access to Salesforce Classic View</label>
    <license>Salesforce</license>
    <userPermissions>
        <enabled>true</enabled>
        <name>LightningExperienceUser</name>
    </userPermissions>
    <userPermissions>
        <enabled>true</enabled>
        <name>PreventClassicExperience</name>
    </userPermissions>
</PermissionSet>
