            <operator>EqualTo</operator>
            <value>
                <elementReference>Loan.LLC_BI__Product_Type__c</elementReference>
            </value>
        </filters>
        <filters>
            <field>LLC_BI__Region__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>Account.LLC_BI__Region__c</elementReference>
            </value>
        </filters>
        <object>LLC_BI__Pricing_Matrix__c</object>
        <outputReference>Longest_Term_Pricing_Matrix</outputReference>
        <queriedFields>Id</queriedFields>
