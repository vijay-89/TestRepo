                <elementReference>Loan.LLC_BI__Amount__c</elementReference>
            </value>
        </filters>
        <filters>
            <field>LLC_BI__Product_Line_Name__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>Loan.LLC_BI__Product_Line__c</elementReference>
            </value>
        </filters>
        <filters>
            <field>LLC_BI__Product_Name__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>Loan.LLC_BI__Product__c</elementReference>
            </value>
        </filters>
        <filters>
