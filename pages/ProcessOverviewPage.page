margin:0px;
padding:0px;
width:300px;
}

#sftotals li a.sftotal{
    display:block;
    width:172px;
    height:30px;
    background-repeat: no-repeat;
    background-position: 6px 6px;
    margin:0px;
    padding-top: 4px;
    padding-right: 10px;
    padding-bottom: 4px;
    padding-left: 38px;
    color:#202020;
    text-decoration:none;
    font-weight:bold;
    line-height:30px;
