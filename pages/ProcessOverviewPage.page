    text-align:center;
}

.sficon .sfnumber{
    width:44px;
    height:43px;
    line-height:44px;
    background-image: url('{!URLFOR($Resource.processViewImages, "PHP_icon_circlenum.png")}');
    background-repeat: no-repeat;
    background-position: 0px 0px;
    margin: 0px;
    padding: 0px;
    overflow: visible;
    position: relative;
    z-index: 11;
    color:#fff;
    font-size:11px;
    font-weight:bold;
    letter-spacing:-.1pt;
    text-align:center;
    display:block;
    left: -6px;
    top: -16px;
}

.sficon h4 a{
    font-size: 12px;
    line-height: 16px;
    color: #202020;
    display: block;
    position: relative;
    top: 20px;
    height: 33px;
    text-decoration: none;
    margin: -76px 0 0 0;
    padding: 74px 0 0 0;
    }
#sftotals{
width:680px;
font-family: Arial, Helvetica, sans-serif;    
}
#sftotals ul{
display:block;
margin:0px;
padding:0px;
padding-left:80px;

}
#sftotals li{
